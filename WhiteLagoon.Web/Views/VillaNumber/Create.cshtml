@model VillaNumber
<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient ms-0 py-3">
        <div class="row ">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create New Villa Number</h2>
            </div>
        </div>

    </div>

    <div class="card-body border p-4">

        <form method="post" class="row">
            @* <div asp-validation-summary="ModelOnly" class="text-danger"></div> *@
            <div class="p-3">
                <div class="form-floating col-12 py-1">
                    <input asp-for="VillaId" class="form-control border shadow" />
                    <label asp-for="VillaId"></label>
                    <span asp-validation-for="VillaId" class="text-danger"></span>
                </div>
                <div class="form-floating col-12 py-1">
                    <input asp-for="Villa_Number" class="form-control border shadow" />
                    <label asp-for="Villa_Number"></label>
                    <span asp-validation-for="Villa_Number" class="text-danger"></span>
                </div>
                <div class="form-floating col-12 py-1">
                    <input asp-for="SpecialDetails" class="form-control border shadow" />
                    <label asp-for="SpecialDetails"></label>
                    <span asp-validation-for="SpecialDetails" class="text-danger"></span>
                </div>
                
               

                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-success w-100">
                            Add New Villa
                        </button>

                    </div>

                    <div class="col-6 col-md-3">
                        <a asp-controller="Villa" asp-action="Index" class="btn btn-secondary w-100">
                            Cancel
                        </a>

                    </div>



                </div>

            </div>

        </form>

    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}